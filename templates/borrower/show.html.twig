{% extends 'base.html.twig' %}

{% block title %}Borrower{% endblock %}

{% block body %}
    <h1>Emprunteurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ borrower.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ borrower.name }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ borrower.address }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ borrower.email }}</td>
            </tr>
            <tr>
                <th>Numéro emprunteur</th>
                <td>{{ borrower.borrowerNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('borrower_index') }}">Revenir à la liste</a>

    <a href="{{ path('borrower_edit', {'id': borrower.id}) }}">Editer</a>

    {{ include('borrower/_delete_form.html.twig') }}
{% endblock %}
